ScreenManager:
    id: screen_manager
    Screen:
        name: "home"
        MDTextButton:
            text: 'Войти'
            pos_hint: {"center_x": .5, "center_y": .85}
            font_size: '40sp'
        MDTextField:
            hint_text: "Введите сид фразу(12 слов)"
            mode: "rectangle"
            pos_hint: {"center_x": .5, "center_y": .7}
            size_hint: .85, .08
        MDFloaButton:
            id: download_pem
            text: "Загрузить из .pem файла"
            on_release: app.file_manager_open('D:/')
            pos_hint: {"center_x": .5, "center_y": .6}
        MDRaisedButton:

