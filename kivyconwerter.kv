Screen:
    MDTextField:
        id: input
        mode: "fill"
        hint_text: "RUB"
        text: '0'
        input_filter: 'float'
        pos_hint: {"center_x": .4, "center_y": .5}
        size_hint: .09, .08
    MDDropDownItem:
        id: drop_item
        pos_hint: {'center_x': .5, 'center_y': .5}
        text: 'Item'
        on_release: app.menu_open()
    MDTextField:
        id: output
        mode: "fill"
        hint_text: "RUB"
        text: '0'
        input_filter: 'float'
        pos_hint: {"center_x": .6, "center_y": .5}
        size_hint: .09, .08
    MDFlatButton:
        text: 'Конвертировать'
        pos_hint: {"center_x": .5, "center_y": .4}
        on_release: app.convert()